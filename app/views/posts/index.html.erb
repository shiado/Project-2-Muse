    <br>
  <div class = "row">
  <div class= "col-lg-4">
    <div class= "media">
      <a class="pull-left" href="#">
        <%= image_tag current_user.avatar.url(:medium), class: "avatar" %>
      </a>
  <div class="media-body">
  <p class="username">
   <%= current_user.username %>
 </p>
 <h4>
   <%= current_user.usertag %>
 </h4>
 <hr style = "margin:8px auto">
 <span class="btn btn-info vote"><%= link_to "Edit Profile", edit_user_registration_path %>
 </span>
 <span class="btn btn-info vote">
   <%- if user_signed_in? %>
   <%= link_to 'New Post', new_post_path %>
   <% end%>
</span>
</div>
</div>
</div>
</div>

  </div>
</div>


    <% @posts.each do |post| %>
  <!-- <br>
  <%= image_tag post.image.url(:medium) %>
  <br> -->

  <div class="col-sm-6 col-md-4 post" style="min-height:50px;">
    <div class="thumbnail">
      <p class = "postcontent"><%= post.content %></p>
    </div>


  <!-- <div class= "votewrap"> -->

    <%- if user_signed_in? %>
    <!-- <%= link_to 'Edit', edit_post_path(post) %> -->

    <%= link_to 'Show', post, class:"btn btn-info pull-left show" %>

    <!-- <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> -->

  <%= link_to like_post_path(post), class:"like", method: :put do %>
  <button type="button" class="btn btn-info vote" aria-label="Left Align">
    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
    <span class="badge"><%= post.get_upvotes.size%></span>
  </button>
  <% end %>

  <%= link_to unlike_post_path(post), class:"like", method: :put do %>
  <button type="button" class="btn btn-info vote" aria-label="Left Align">
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <span class="badge"><%= post.get_downvotes.size%></span>
  </button>
  <% end %>

  <br>


</div>

</div>
<% end %>

