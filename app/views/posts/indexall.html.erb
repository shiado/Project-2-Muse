<p id="notice"><%= notice %></p>

<h1>ALL POSTS FROM ALL USERS</h1>
<!-- <%- if user_signed_in? %>
<%= link_to 'New Post', new_post_path %>
<% end%> -->
<br>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
  <!-- <br>
  <%= image_tag post.image.url(:medium) %>
  <br> -->
  <div class="col-sm-6 col-md-4" style="min-height:50px;">
    <div class="thumbnail">
      <p><%= post.content %></p>
    </div>
  <!-- <%= image_tag post.image.url(:medium) %> -->

  <%= link_to like_post_path(post), class:"like", method: :put do %>
  <button type="button" class="btn btn-info" aria-label="Left Align">
    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
    <span class="badge"><%= post.get_upvotes.size%></span>
  </button>
  <% end %>

  <%= link_to unlike_post_path(post), class:"like", method: :put do %>
  <button type="button" class="btn btn-info" aria-label="Left Align">
    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <span class="badge"><%= post.get_downvotes.size%></span>
  </button>
  <% end %>

  <br>
  <%- if user_signed_in? %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Show', post %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

</div>

      <!-- <tr>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> -->

    <% end %>
  </tbody>
</table>

