<p class= "signup">Sign up </p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %> <br>
  <div class="form-group ">
  <%= f.label :avatar, class: " control-label" %>
  <%= f.file_field :avatar %>
</div>
  <div class="field">
    <!-- <%= f.label :username %><br /> -->
    <%= f.text_field :username, autocomplete: "off", placeholder: 'username' %>
  </div>

  <div class="field">
    <!-- <%= f.label :email %><br /> -->
    <%= f.text_field :email, autofocus: true, placeholder:"email"%>
  </div>

  <div class="field">
    <!-- <%= f.label :password %> -->
  <%= f.password_field :password, autocomplete: "off", placeholder:"password" %>
  </div>

  <div class="field">
    <!-- <%= f.label :password_confirmation %><br /> -->
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password_confirmation" %><br>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

